<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="630.0" prefWidth="1120.0" style="-fx-background-color: #f9f9f9; -fx-padding: 20;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.java.controller.UserAddTemplateControllor">
    <!-- Title -->
    <Label layoutX="20.0" layoutY="20.0" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #333;" text="新しいテンプレートを追加" />

    <!-- Title Field -->
    <Label layoutX="50.0" layoutY="80.0" style="-fx-font-size: 14; -fx-text-fill: #555;" text="タイトル:" />
    <TextField fx:id="titleField" layoutX="150.0" layoutY="75.0" prefWidth="800.0" style="-fx-background-color: #fff; -fx-border-color: #ccc; -fx-border-radius: 4; -fx-padding: 5;" />

    <!-- Description Field -->
    <Label layoutX="50.0" layoutY="140.0" style="-fx-font-size: 14; -fx-text-fill: #555;" text="説明:" />
    <TextArea fx:id="descriptionField" layoutX="150.0" layoutY="135.0" prefHeight="100.0" prefWidth="800.0" style="-fx-background-color: #fff; -fx-border-color: #ccc; -fx-border-radius: 4; -fx-padding: 5;" />

    <!-- Text Field -->
    <Label layoutX="50.0" layoutY="260.0" style="-fx-font-size: 14; -fx-text-fill: #555;" text="テキスト:" />
    <TextArea fx:id="textField" layoutX="150.0" layoutY="255.0" prefHeight="100.0" prefWidth="800.0" style="-fx-background-color: #fff; -fx-border-color: #ccc; -fx-border-radius: 4; -fx-padding: 5;" />

    <!-- Notion Field -->
    <Label layoutX="50.0" layoutY="380.0" style="-fx-font-size: 14; -fx-text-fill: #555;" text="注意事項:" />
    <TextField fx:id="notionField" layoutX="150.0" layoutY="375.0" prefWidth="800.0" style="-fx-background-color: #fff; -fx-border-color: #ccc; -fx-border-radius: 4; -fx-padding: 5;" />

    <!-- Buttons -->
    <HBox layoutX="150.0" layoutY="500.0" spacing="10">
        <Button fx:id="saveButton" onAction="#addBtnEnter" prefWidth="100.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14; -fx-border-radius: 4;" text="保存" />
        <Button fx:id="cancelButton" onAction="#cancelBtnEnter" prefWidth="100.0" style="-fx-background-color: #F44336; -fx-text-fill: white; -fx-font-size: 14; -fx-border-radius: 4;" text="キャンセル" />
    </HBox>
</AnchorPane>
